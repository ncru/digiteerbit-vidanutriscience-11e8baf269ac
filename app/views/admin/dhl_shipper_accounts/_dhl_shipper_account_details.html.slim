    .col-lg-6.col-md-6.col-sm-6.col-xs-6
      =f.text_field :contact_person, :id=>"contact_person", :class=>"form-control required", :placeholder=>"Contact Person"
      span.error-msg.hidden    
  .form-group
    label.control-label.col-lg-3.col-md-3.col-sm-3.col-xs-3 for="contact_no" 
      | Contact No.
      span.help data-toggle="tooltip" data-placement="top" data-container="body" title="The Contact No. of the DHL shipper account that will be used to DHL API." 
        i.icon-question-sign &nbsp;
    .col-lg-6.col-md-6.col-sm-6.col-xs-6
      =f.text_field :contact_no, :id=>"contact_no", :class=>"form-control required", :placeholder=>"Contact No."
      span.error-msg.hidden
  .form-group
    label.control-label.col-lg-3.col-md-3.col-sm-3.col-xs-3 for="product_code" 
      | Default Product
      span.help data-toggle="tooltip" data-placement="top" data-container="body" title="The default Product of the DHL shipper account that will be used to DHL API." 
        i.icon-question-sign &nbsp;
    .col-lg-6.col-md-6.col-sm-6.col-xs-6
      =f.select(:default_product_code, options_from_collection_for_select(@dhl_products, :code, :name, f.object.default_product_code), {include_blank: ' Default Product (Doc/Non Doc)'}, id: 'product_code', class: "form-control chosen-select")
      span.error-msg.hidden
  .form-group
    label.control-label.col-lg-3.col-md-3.col-sm-3.col-xs-3 for="package_type" 
      | Default Package Type
      span.help data-toggle="tooltip" data-placement="top" data-container="body" title="The default Package Type of the DHL shipper account that will be used to DHL API." 
        i.icon-question-sign &nbsp;
    .col-lg-6.col-md-6.col-sm-6.col-xs-6
      =f.select(:default_package_type, options_from_collection_for_select(@dhl_package_types, :code, :name, f.object.default_package_type), {include_blank: 'Default Package Type'}, id: 'package_type', class: "form-control chosen-select")
      span.error-msg.hidden
  h5 For Book Pickup
  .form-group
    label.control-label.col-lg-3.col-md-3.col-sm-3.col-xs-3 for="ready_time"
      | Ready By Time
      span.help data-toggle="tooltip" data-placement="top" data-container="body" title="The ready by time of the package."
        i.icon-question-sign &nbsp;
    .col-lg-6.col-md-6.col-sm-6.col-xs-6
      =f.text_field :ready_time, :id=>"ready_time", :class=>"form-control timepicker", :placeholder=>"From", :value=>custom_format_date(f.object.ready_time, "%I:%M %p")
  .form-group
    label.control-label.col-lg-3.col-md-3.col-sm-3.col-xs-3 for="close_time"
      | Office Close Time
      span.help data-toggle="tooltip" data-placement="top" data-container="body" title="The close time of your office."
        i.icon-question-sign &nbsp;
    .col-lg-6.col-md-6.col-sm-6.col-xs-6
      =f.text_field :close_time, :id=>"close_time", :class=>"form-control timepicker", :placeholder=>"From", :value=>custom_format_date(f.object.close_time, "%I:%M %p")
  
javascript:
  $(function() {
    $('.timepicker').datetimepicker({
      format: 'g:i A',
      datepicker: false,
      timepicker: true,
      step: 30
    });
  });  
