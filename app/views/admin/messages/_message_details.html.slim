fieldset.form-horizontal.details
  .form-group
    label.control-label.col-lg-2.col-md-2.col-sm-2.col-xs-2 for="name"
      | Name
      span.help data-toggle="tooltip" data-placement="top" data-container="body" title="The name of the sender."
        i.icon-question-sign &nbsp;
    .col-lg-6.col-md-6.col-sm-6.col-xs-6
      =f.text_field :name, :id=>"name", :class=>"form-control", :disabled=>true
  .form-group
    label.control-label.col-lg-2.col-md-2.col-sm-2.col-xs-2 for="email"
